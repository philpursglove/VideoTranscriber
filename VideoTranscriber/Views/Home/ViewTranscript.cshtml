@model VideoTranscriber.Controllers.ViewTranscriptViewModel
@{
    ViewData["Title"] = "View Transcript";
}

<div class="text-center">
    <h2 class="display-4">Transcript for @Model.Filename</h2>
</div>
<div>
    <h3>Language: @Model.Language </h3>
</div>
<div>
    Keywords: @string.Join(", ", Model.Keywords)
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Start Time</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var element in Model.Transcript.OrderBy(t => t.Id))
        {
            <tr>
                <td>@element.Id</td>
                <td>@element.StartTimeIndex</td>
                <td>@element.Text</td>
            </tr>
        }
    </tbody>
</table>